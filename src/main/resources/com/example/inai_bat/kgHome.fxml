<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="781.0" prefWidth="1415.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.inai_bat.kgController.KgMainMenuController">
    <stylesheets>
        <URL value="@styles_for_menu.css"/>
    </stylesheets>
    <children>
        <ImageView fitHeight="781.0" fitWidth="1415.0">
            <image>
                <Image url="@images/menuImg.png"/>
            </image>
        </ImageView>
        <MenuButton fx:id="menuButton" layoutX="55.0" layoutY="470.0" mnemonicParsing="false" prefHeight="50.0"
                    prefWidth="278.0"
                    style="-fx-display: inline-block; -fx-padding: 7px 12px; -fx-border-radius: 10px; -fx-color: #fff; -fx-text-transform: uppercase; -fx-font-size: 24px; -fx-letter-spacing: 0.15em; -fx-transition: all 0.3s; -fx-position: relative; -fx-overflow: hidden; -fx-z-index: 1; -fx-background-color: #0cf; -fx-text-fill: #fff;"
                    styleClass="custom-button" text="Башта">
            <font>
                <Font name="Times New Roman" size="29.0"/>
            </font>
        </MenuButton>
        <Button fx:id="exitButton" layoutX="55.0" layoutY="586.0" mnemonicParsing="false" onAction="#handleExitButton"
                prefHeight="50.0" prefWidth="278.0"
                style="-fx-display: inline-block; -fx-padding: 7px 12px; -fx-border-radius: 10px; -fx-color: #fff; -fx-text-transform: uppercase; -fx-font-size: 24px; -fx-letter-spacing: 0.15em; -fx-transition: all 0.3s; -fx-position: relative; -fx-overflow: hidden; -fx-z-index: 1; -fx-background-color: #0cf; -fx-text-fill: #fff;"
                styleClass="custom-button" text="Чык">
            <font>
                <Font name="Times New Roman" size="29.0"/>
            </font>
        </Button>

        <Button fx:id="kgButton" layoutX="1230.0" layoutY="28.0" mnemonicParsing="false"
                 prefHeight="36.0" prefWidth="83.0"
                 style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: #000000; -fx-font-size: 29.0;"
                 text="КГ" textFill="WHITE">
        <font>
            <Font name="Times New Roman" size="29.0"/>
        </font>
    </Button>

        <Button layoutX="1120.0" layoutY="28.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="83.0"
                style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: #000000; -fx-font-size: 29.0;"
                text="НЕ" textFill="WHITE">
            <font>
                <Font name="Times New Roman" size="29.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
